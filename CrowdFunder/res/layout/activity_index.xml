<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/project_main_layout">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/profilMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:layout_weight="3" />

        <Button
            android:id="@+id/addProjectMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un projet"
            android:layout_weight="3" />

        <Button
            android:id="@+id/logoutMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deconnexion"
            android:layout_weight="3" />

        
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/categoryListView"
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            />

    <Button
        android:id="@+id/cmdAllProject"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="All project" />
        
    </LinearLayout>
   
    <ListView
        android:id="@+id/projectListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>
    
    
</LinearLayout>